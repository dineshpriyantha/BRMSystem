    <script>
        var connection = new signalR.HubConnectionBuilder()
            .withUrl("/eventhub")
            .build();

        connection.on("ReceiveEvent", function (eventData) {
            // Display the received event data in the event container
            var alertComponent = document.createElement("div");
            alertComponent.classList.add("alert", "alert-warning", "alert-dismissible", "fade", "show");
            alertComponent.innerHTML = `
                <strong>New Event:</strong> Value: ${eventData.value}, Timestamp: ${eventData.timestamp}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            `;
            document.getElementById("event-container").appendChild(alertComponent);
        });

        connection.start();
    </script>
}

<div class="row">
    <div class="col-md-8">
        <a asp-area="" asp-controller="Home" class="btn btn-outline-success" asp-action="Create">Create New</a>
        <table class="table table-responsive bg-light">
            <thead>
                <tr>
                    <td>Name</td>
                    <td>SSN</td>
                    <td>DateOfBirth</td>
                    <td>MailingAddress</td>
                    <td>Action</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Borrowers)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.SSN</td>
                        <td>@item.DateOfBirth</td>
                        <td>@item.MailingAddress</td>
                        <td>
                            <a asp-controller="Home" asp-action="Edit" class="btn btn-outline-secondary" asp-route-id="@item.Id">Edit</a>
                            <a asp-controller="Home" asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-md-4">
        <div id="event-container"></div>
    </div>
</div>

