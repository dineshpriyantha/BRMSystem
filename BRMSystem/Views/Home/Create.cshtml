@model DataAccessLayer.Models.Borrower;

<h2 class="alert-info">@ViewBag.message</h2>
  <div class="shadow p-5">
    <div class="row pb-2">
        <h2>Add Employee</h2>
    </div>

    <form method="POST"  enctype="multipart/form-data" asp-controller="Home" asp-action="Create" >

      <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Name">Name</label>
                <input type="text" class="form-control" asp-for="Name" placeholder="Enter Name">
                <span asp-validation-for="Name" class="alert-danger"></span>
        </div>
        <div class="form-group col-md-6">
                <label asp-for="SSN">SSN</label>
                <input type="text" class="form-control" asp-for="SSN" placeholder="Enter SSN (ex:00-000-0000)">
                <span asp-validation-for="SSN" class="alert-danger"></span>
        </div>

        <div class="form-group col-md-6">
                <label asp-for="DateOfBirth">Date Of Birth</label>
                <input type="date" class="form-control" asp-for="DateOfBirth" placeholder="Enter Date Of Birth">
                <span asp-validation-for="DateOfBirth" class="alert-danger"></span>
        </div>

        <div class="form-group col-md-6">
                <label asp-for="MailingAddress">Mailing Address</label>
                <input type="text" class="form-control mb-3" asp-for="MailingAddress" placeholder="Enter Mailing Address">
                <span asp-validation-for="MailingAddress" class="alert-danger"></span>
        </div>

      </div>
      <input  type="submit" class="btn btn-outline-success" value="Submit"/>
      <a asp-area="" asp-controller="Home" class="btn btn-outline-secondary" asp-action="Index">Back</a>
    </form>    
</div>